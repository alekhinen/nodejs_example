<a class="btn btn-default" href="/users/">All</a>
<h1>New User</h1>

{{#each err.errors}}
  <p class="text-danger">{{this}}</p>
{{/each}}
<form method="post" action="/users/new" role="form">
  <div class="form-group {{#if err.errors.name.full }} has-error {{/if}}">
    <label class="control-label">Full Name</label>
    <input class="form-control" name="full_name" type="text" placeholder="Hank Hill" value="{{submitted.name.full}}"></input>
  </div>
  <div class="form-group {{#if err.errors.email }} has-error {{/if}}">
    <label class="control-label">Email</label>
    <input class="form-control" name="email" type="text" placeholder="hankhill@propane.biz" value="{{submitted.email}}"></input>
  </div>
  <div class="form-group {{#if err.errors.phone }} has-error {{/if}}">
    <label class="control-label">Phone</label>
    <input class="form-control" name="phone" type="text" placeholder="(555) 555-5555" value="{{submitted.phone}}"></input>
  </div>
  <input class="btn btn-default" type="submit" value="Submit"></input>
</form>
